---
import Layout from "@/layouts/Layout.astro";
import Button from "@/components/ui/buttons/Button.astro";
import { Icon } from "@iconify-icon/react";
import { navItems } from "@/config/navItems.json";
import { t } from "@/lib/utils";
---

<Layout title={t("meta.404.title")} description={t("meta.404.description")}>
  <section class="min-h-screen flex items-center justify-center px-4 py-20">
    <div class="max-w-3xl mx-auto text-center">
      <!-- Large 404 -->
      <div class="mb-8">
        <h1
          class="text-[150px] md:text-[200px] lg:text-[250px] font-anton leading-none text-secondary"
        >
          {t("404.h1")}
        </h1>
      </div>

      <!-- Error Message -->
      <div class="space-y-6 mb-12">
        <h2
          class="text-4xl md:text-5xl lg:text-6xl font-anton uppercase leading-tight"
        >
          {t("404.h2")}
        </h2>
        <p class="text-muted font-sans text-lg md:text-xl max-w-2xl mx-auto">
          {t("404.description")}
        </p>
      </div>

      <!-- Navigation Options -->
      <div
        class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-12"
      >
        <Button variant="solid" size="lg" class="w-full sm:w-auto">
          <a href="/" class="flex items-center gap-2">
            <Icon client:only="react" icon="mdi:home" className="size-5" />
            <span>{t("404.back.btn")}</span>
          </a>
        </Button>
        <Button variant="outline" size="lg" class="w-full sm:w-auto">
          <a href="/contact" class="flex items-center gap-2">
            <Icon client:only="react" icon="mdi:email" className="size-5" />
            <span>{t("404.contact.btn")}</span>
          </a>
        </Button>
      </div>

      <!-- Quick Links -->
      <div class="border-t border-muted pt-12">
        <p class="text-muted font-grotesk uppercase text-sm mb-6">
          {t("404.quick.link")}
        </p>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          {
            navItems.map((item) => (
              <a
                href={item.href}
                class="p-4 rounded-lg border-2 border-muted hover:border-secondary transition-colors group"
              >
                <Icon
                  client:only="react"
                  icon={item.icon || "mdi:home"}
                  width={38}
                  height={38}
                  className="mx-auto mb-2 text-muted group-hover:text-secondary transition-colors"
                />
                <p class="font-grotesk uppercase text-sm">{item.title}</p>
              </a>
            ))
          }
        </div>
      </div>
    </div>
  </section>
</Layout>
