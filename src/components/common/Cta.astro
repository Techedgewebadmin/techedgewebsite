---
import { Icon } from "astro-icon/components";
import { t } from "@/lib/utils";
import Button from "../ui/buttons/Button.astro";
---

<section class="py-16 md:py-20 px-4">
    <div
      class="max-w-7xl mx-auto bg-white border-2 border-dashed border-muted rounded-lg overflow-hidden shadow-sm flex flex-col md:flex-row"
    >
      <div
        class="w-full md:w-5/12 bg-secondary relative min-h-[300px] flex items-center justify-center overflow-hidden"
      >
        <Icon name="panel" size={220} />
      </div>

      <div
        class="w-full md:w-7/12 p-8 md:p-12 lg:p-16 flex flex-col justify-center bg-white"
      >
        <span
          class="font-mono text-sm font-bold uppercase tracking-wider mb-3 text-black"
        >
          {t("cta.heading")}
        </span>

        <h2
          class="text-4xl md:text-5xl lg:text-6xl font-black text-black leading-[0.95] mb-6 tracking-tight"
        >
          {t("cta.title")}
        </h2>

        <p
          class="text-lg text-gray-800 mb-8 max-w-lg leading-relaxed font-medium font-grotesk"
        >
          {t("cta.description")}
        </p>

        <div class="flex flex-col sm:flex-row gap-4">
          <Button
            variant="primary"
            size="md"
            href="/contact"
          >
            {t("cta.btn")}
          </Button>
        </div>
      </div>
    </div>
  </section>
