---
import { t } from "@/lib/utils";
import Button from "../ui/buttons/Button.astro";
---

<div class="bg-background border border-secondary-dark rounded-lg p-8 md:p-10">
  <h3
    class="text-2xl md:text-3xl font-anton uppercase mb-4 text-foreground text-center"
  >
    {t("ctaslug.title")}
  </h3>
  <p class="text-base md:text-lg text-muted mb-6 text-center max-w-2xl mx-auto">
    {t("ctaslug.description")}
  </p>
  <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
    <Button href="/contact" variant="solid" size="md">
      {t("ctaslug.btn.contact")}
    </Button>
    <Button href="/projects" variant="outline" size="md">
      {t("ctaslug.btn.projects")}
    </Button>
  </div>
</div>
